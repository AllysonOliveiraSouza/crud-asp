@model ContatoModel

@{
    ViewData["Title"] = "Criar Contato";
}

<h1 class="text-center">Criar contato</h1>

<form asp-controller="Contato" asp-action="CriarContato" method="post">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome </label>
        <input type="text" asp-for=Nome class="form-control" id="nome" aria-describedby="nomeHelp">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for=Email class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label class="form-label" for="tel">Telefone</label>
        <input type="tel" asp-for=Celular class="form-control" id="telefone">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
<br />
<a asp-controller="Contato" asp-action="Index"><button class="btn btn-danger">Voltar</button> </a>


