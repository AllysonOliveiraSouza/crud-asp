@model ContatoModel

@{
    ViewData["Title"] = "Alterar Contato";
}

<h1 class="text-center">Alterar Contato</h1>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label for="nome" class="form-label">Nome </label>
        <input type="text" asp-for=Nome class="form-control" id="nome" aria-describedby="nomeHelp">
        <div id="nomeHelp" class="form-text">Não deixe os campos em branco !</div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for=Email class="form-control" id="email">
    </div>
    <div class="mb-3">
        <label class="form-label" for="tel">Telefone</label>
        <input type="tel" asp-for=Celular class="form-control" id="telefone">
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
</form>
<br />
<a asp-controller="Contato" asp-action="Index"><button class="btn btn-danger">Voltar</button> </a>